<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailedFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <ImageView
                android:id="@+id/job_picture"
                android:layout_width="150dp"
                android:layout_height="100dp"

                android:layout_marginStart="4dp"
                android:background="@color/white"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/job_detailed_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Title"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/job_picture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.137" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topCard"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="0.0">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="20dp"
            android:paddingHorizontal="10dp">

            <ImageView
            android:id="@+id/job_item_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@null"

            android:src="@drawable/ic_star_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/job_detailed_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Company"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/job_item_saved" />

            <TextView
                android:id="@+id/job_detailed_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Location"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_company"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_company" />

            <TextView
                android:id="@+id/job_detailed_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Salary"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_place"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_place" />

            <TextView
                android:id="@+id/job_detailed_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Experience"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_salary"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_salary" />

            <TextView
                android:id="@+id/job_detailed_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Qualification"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_experience"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_experience" />

            <TextView
                android:id="@+id/job_detailed_phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="PhoneNumber"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_qualification"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_qualification" />

            <TextView
                android:id="@+id/job_detailed_jobHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Job Hour"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_phoneno"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_phoneno" />

            <TextView
                android:id="@+id/job_detailed_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Role"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_jobHour"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_jobHour" />

            <TextView
                android:id="@+id/job_detailed_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Category"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_role"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_role" />


            <TextView
                android:id="@+id/job_detailed_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Expire date"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintStart_toStartOf="@+id/job_detailed_category"
                app:layout_constraintTop_toBottomOf="@+id/job_detailed_category" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

